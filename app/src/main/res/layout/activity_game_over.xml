<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.GameOverActivity">

    <LinearLayout
        android:id="@+id/linear_komanda"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="24dp"
        android:background="@drawable/bg_result_stroke"
        android:backgroundTint="@color/linear_spiderman"
        android:orientation="vertical"
        android:padding="10dp"
        android:text="Spiderman"
        android:textColor="@color/white"
        android:textSize="30sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/exit_icon_score"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/silinecek">

        <TextView
            android:id="@+id/textView"
            android:layout_width="351dp"
            android:layout_height="58dp"
            android:text="Komanda 1"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textSize="32sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="@+id/silinecek"
            app:layout_constraintStart_toStartOf="@+id/silinecek"
            app:layout_constraintTop_toBottomOf="@+id/silinecek" />
    </LinearLayout>

    <TextView
        android:id="@+id/oyun_bitdi"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Oyun Bitdi!"
        android:textColor="@color/linear_dark"
        android:textSize="44sp"
        android:textStyle="bold"
        android:layout_marginTop="48dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/silinecek"
        android:layout_width="196dp"
        android:layout_height="196dp"
        android:background="@drawable/kupa_image"
        app:layout_constraintTop_toBottomOf="@id/oyun_bitdi"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="48dp"/>

    <TextView
        android:id="@+id/score"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Komanda"
        android:textAlignment="textStart"
        android:textSize="25sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/exit_icon_score"
        app:layout_constraintStart_toStartOf="@+id/komanda_1"
        app:layout_constraintTop_toTopOf="@+id/exit_icon_score" />

    <ImageView
        android:id="@+id/exit_icon_score"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_red_rounded"
        android:padding="12dp"
        android:src="@drawable/ic_cancel_white"
        app:layout_constraintBottom_toTopOf="@+id/komanda_1_exit"
        app:layout_constraintEnd_toStartOf="@+id/next_icon_score"
        app:layout_constraintStart_toEndOf="@+id/komanda_1"
        />

    <ImageView
        android:id="@+id/next_icon_score"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="32dp"
        android:background="@drawable/bg_red_rounded"
        android:backgroundTint="@color/yellow"
        android:padding="12dp"
        android:src="@drawable/ic_next"
        app:layout_constraintBottom_toTopOf="@+id/komanda_1_next"
        app:layout_constraintEnd_toStartOf="@+id/okey_icon_score"
        app:layout_constraintStart_toEndOf="@+id/exit_icon_score"
        />

    <ImageView
        android:id="@+id/okey_icon_score"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_red_rounded"
        android:backgroundTint="@color/green"
        android:padding="12dp"
        android:src="@drawable/ic_done"
        app:layout_constraintBottom_toTopOf="@+id/komanda_1_okey"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/next_icon_score"
        />

    <TextView
        android:id="@+id/komanda_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Komanda 1"
        android:textStyle="bold"
        android:textAlignment="textStart"
        android:textSize="25sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/silinecek"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@id/exit_icon_score"

        />

    <TextView
        android:id="@+id/komanda_1_exit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="100"
        android:textAlignment="textStart"
        android:textColor="@color/red"
        android:textSize="25sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/exit_icon_score"
        app:layout_constraintStart_toStartOf="@+id/exit_icon_score"
        app:layout_constraintTop_toBottomOf="@id/silinecek" />

    <TextView
        android:id="@+id/komanda_1_next"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="10"
        android:textAlignment="textStart"
        android:textColor="@color/yellow"
        android:textSize="25sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/next_icon_score"
        app:layout_constraintStart_toStartOf="@+id/next_icon_score"
        app:layout_constraintTop_toBottomOf="@id/silinecek" />

    <TextView
        android:id="@+id/komanda_1_okey"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="15"
        android:textAlignment="textStart"
        android:textColor="@color/green"
        android:textSize="25sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/okey_icon_score"
        app:layout_constraintStart_toStartOf="@+id/okey_icon_score"
        app:layout_constraintTop_toBottomOf="@id/silinecek" />

    <TextView
        android:id="@+id/komanda_2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="24dp"
        android:layout_marginTop="24dp"
        android:text="Komanda 2"
        android:textAlignment="textStart"
        android:textSize="25sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@+id/komanda_1"
        app:layout_constraintStart_toStartOf="@+id/komanda_1"

        app:layout_constraintTop_toBottomOf="@id/komanda_1" />

    <TextView
        android:id="@+id/komanda_2_exit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:text="7"
        android:textAlignment="textStart"
        android:textColor="@color/red"
        android:textSize="25sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@+id/komanda_1_exit"
        app:layout_constraintStart_toStartOf="@+id/komanda_1_exit"
        app:layout_constraintTop_toBottomOf="@id/komanda_1_exit"

        />

    <TextView
        android:id="@+id/komanda_2_next"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:text="10"
        android:textAlignment="textStart"
        android:textColor="@color/yellow"
        android:textSize="25sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@+id/komanda_1_next"
        app:layout_constraintStart_toStartOf="@+id/komanda_1_next"
        app:layout_constraintTop_toBottomOf="@id/komanda_1_next" />

    <TextView
        android:id="@+id/komanda_2_okey"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:text="15"
        android:textAlignment="textStart"
        android:textColor="@color/green"
        android:textSize="25sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@+id/komanda_1_okey"
        app:layout_constraintStart_toStartOf="@+id/komanda_1_okey"
        app:layout_constraintTop_toBottomOf="@id/komanda_1_okey" />


</androidx.constraintlayout.widget.ConstraintLayout>