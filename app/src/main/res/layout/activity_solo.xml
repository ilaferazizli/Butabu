<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.SoloActivity"
    android:background="@color/linear_dark">
    <TextView
        android:id="@+id/Solo_oyun"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Solo Oyun"
        android:textColor="@color/dark_pink"
        android:textStyle="bold"
        android:textSize="64sp"
        android:paddingBottom="16dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/linearLayout_5"
        />
    <LinearLayout
        android:id="@+id/linearLayout_5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="48dp"
        android:background="@drawable/bg_blue"
        android:backgroundTint="@color/dark_pink"
        android:gravity="center"
        android:orientation="vertical"

        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/Solo_oyun">

        <ImageView
            android:id="@+id/geri"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:layout_marginHorizontal="16dp"
            android:padding="16dp"
            android:src="@drawable/ic_cancel_white" />

        <TextView
            android:id="@+id/sade"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_white_rounded"
            android:backgroundTint="@color/linear_dark"
            android:textColor="@color/white"
            android:padding="6dp"
            android:text="Sadə"
            android:layout_marginHorizontal="@dimen/difficulty_margin_horizontal"
            android:textAlignment="center"
            android:textSize="20sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/orta"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:background="@drawable/bg_white_rounded"
            android:padding="6dp"
            android:backgroundTint="@color/linear_dark"
            android:textColor="@color/white"
            android:text="Orta"
            android:textAlignment="center"
            android:textSize="20sp"
            android:textStyle="bold"


            />

        <TextView
            android:id="@+id/cetin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:background="@drawable/bg_white_rounded"
            android:padding="6dp"
            android:layout_marginHorizontal="@dimen/difficulty_margin_horizontal"
            android:text="Çətin"
            android:backgroundTint="@color/linear_dark"
            android:textColor="@color/white"
            android:textAlignment="center"
            android:textSize="20sp"
            android:textStyle="bold"

            />

        <TextView
            android:id="@+id/parametrler"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginVertical="40dp"
            android:layout_marginHorizontal="@dimen/difficulty_margin_horizontal"
            android:background="@drawable/bg_white_rounded"
            android:backgroundTint="@color/white"
            android:padding="6dp"
            android:text="Parametrlər"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textSize="20sp"
            android:textStyle="bold" />

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>