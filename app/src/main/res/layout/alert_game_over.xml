<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:orientation="vertical"
    android:padding="32dp">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Vaxt Bitdi!"
        android:textStyle="bold"
        android:textSize="48sp"
        android:paddingBottom="16dp"
        android:textColor="@color/linear_spiderman"
        />
    <TextView
        android:id="@+id/round"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Round 1/4"
        android:textStyle="bold"
        android:textAlignment="center"
        android:textSize="25sp"
        android:layout_marginBottom="10dp"
        android:textColor="@color/yellow"
        />
    <TextView
        android:id="@+id/team_current"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Komanda 1"
        android:textSize="25sp"
        android:textAlignment="center"
        android:textStyle="bold"
        android:textColor="@color/linear_spiderman"
        />

    <LinearLayout
        android:id="@+id/linear_linear"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="12dp"
        android:layout_marginTop="48dp">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_red_rounded"
            android:src="@drawable/ic_cancel_white"
            android:padding="12dp"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="32dp"
            android:background="@drawable/bg_red_rounded"
            android:backgroundTint="@color/yellow"
            android:padding="12dp"
            android:src="@drawable/ic_next" />

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_red_rounded"
            android:backgroundTint="@color/green"
            android:padding="12dp"
            android:src="@drawable/ic_done" />

    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >
        <TextView
            android:id="@+id/cancel_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1"
            android:textStyle="bold"
            android:textSize="32sp"
            android:textAlignment="center"
            android:textColor="@color/red"/>
        <TextView
            android:id="@+id/next_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="3"
            android:layout_marginHorizontal="64dp"
            android:textStyle="bold"
            android:textAlignment="center"
            android:textSize="32sp"
            android:textColor="@color/yellow"
            />
        <TextView
            android:id="@+id/done_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="4"
            android:textAlignment="center"
            android:textStyle="bold"
            android:textSize="32sp"
            android:textColor="@color/green"/>
    </LinearLayout>
    <TextView
        android:id="@+id/next_team"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Növbəti Komanda 2"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textAlignment="center"
        android:layout_marginTop="48dp"
        android:textColor="@color/linear_spiderman"/>
    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/basla"
        android:layout_width="170dp"
        android:layout_height="40dp"
        android:text="Başla"
        android:layout_marginTop="16dp"
        android:textStyle="bold"
        android:textSize="16sp"
        android:background="@drawable/bg_button"
        android:backgroundTint="@color/yellow"
        android:textColor="@color/white"
        />
</LinearLayout>
