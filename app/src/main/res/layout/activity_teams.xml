<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.TeamsActivity">

    <TextView
        android:id="@+id/komandalar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Komandalar"
        android:textColor="@color/yellow"
        android:textSize="44sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.25" />
    <TextView
        android:id="@+id/Ad"
        android:layout_width="96dp"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_white_rounded"
        android:padding="12dp"
        android:text="Ad"
        android:textAlignment="center"
        android:textColor="@color/linear_spiderman"
        android:textSize="20sp"
        android:textStyle="bold"
        android:layout_marginTop="48dp"
        app:layout_constraintStart_toStartOf="@id/team_1_name"
        app:layout_constraintTop_toBottomOf="@id/komandalar"
        app:layout_constraintBottom_toTopOf="@id/team_1_name"/>
    <EditText
        android:id="@+id/team_1_name"
        android:layout_width="300dp"
        android:layout_height="48dp"
        android:hint="Komanda 1"
        android:paddingHorizontal="12dp"
        android:layout_marginTop="24dp"
        android:background="@drawable/time_xett"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/team_2_name"
        app:layout_constraintTop_toBottomOf="@id/Ad"
        />
    <EditText
        android:id="@+id/team_2_name"
        android:layout_width="300dp"
        android:layout_height="48dp"
        android:hint="Komanda 2"
        android:paddingHorizontal="12dp"
        android:layout_marginTop="24dp"
        android:background="@drawable/time_xett"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/team_1_name"
        />

    <TextView
        android:id="@+id/round_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="48dp"
        android:backgroundTint="@color/linear_spiderman"
        android:text="Raund sayÄ±"
        android:textAlignment="center"
        android:textColor="@color/linear_spiderman"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="@+id/team_2_name"
        app:layout_constraintTop_toBottomOf="@id/team_2_name" />

    <EditText
        android:id="@+id/round_count"
        android:layout_width="96dp"
        android:layout_height="56dp"
        android:background="@drawable/time_xett"
        android:padding="8dp"
        android:text="4"
        android:inputType="time"
        android:textAlignment="center"
        android:textColor="@color/linear_spiderman"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="@+id/round_text_view"
        app:layout_constraintEnd_toEndOf="@+id/team_2_name"
        app:layout_constraintTop_toTopOf="@+id/round_text_view" />
    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/bitdi"
        android:layout_width="wrap_content"
        android:layout_height="48dp"
        android:background="@drawable/bg_button"
        android:backgroundTint="@color/yellow"
        android:textAllCaps="false"
        android:text="Bitdi"
        android:textSize="20sp"
        android:textColor="@color/linear_spiderman"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/round_text_view" />
</androidx.constraintlayout.widget.ConstraintLayout>